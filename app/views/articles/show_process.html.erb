      <ul>
      	 <li><%= link_to "Описание", work_path%></li>
        <li class="current">Процесс</li>
      </ul>
      <% end %>
    </div>
    <%= @article.process.html_safe %>
  </div>
<p id="notice"><%= notice %></p>
<% if current_user %>
<%= link_to 'Edit', portfolio_work_path(@article.alias) %> |
<%= link_to 'Back', articles_path %>
<% end %>
